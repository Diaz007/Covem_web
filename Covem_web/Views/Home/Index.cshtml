@model Covem_web.Vista_Principal

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout_Principal.cshtml";
    Covem_web.vtreact_Covume2Entities db = new Covem_web.vtreact_Covume2Entities();
    Covem_web.Persona persona = db.Persona.Where(x => x.Correo == User.Identity.Name).FirstOrDefault();

    int AutosActivos = db.Auto.Where(x => x.Estatus == "Activo").Count();
    int EmpleadosActivos = db.Persona.Where(x => x.activo == true).Count();
    int AutosTaller = db.Auto.Where(x => x.Estatus == "En Servicio").Count();
}

<div class="row">
    <div class="col-md-12 grid-margin">

        <div class="row">
            <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                <h3 class="font-weight-bold">Bienvenido @persona.nombre @persona.Apellidos</h3>
                <h6 class="font-weight-normal mb-0"> Usted Tiene <span class="text-primary">0  alertas!</span></h6>
            </div>
            <div class="col-12 col-xl-4">
                <div class="justify-content-end d-flex">
                    <div class="dropdown flex-md-grow-1 flex-xl-grow-0">
                        <button class="btn btn-sm btn-light bg-white dropdown-toggle" type="button" id="dropdownMenuDate2" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            <i class="mdi mdi-calendar"></i> Hoy (@DateTime.Now.ToShortDateString())
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuDate2">
                            <a class="dropdown-item" href="#">January - March</a>
                            <a class="dropdown-item" href="#">March - June</a>
                            <a class="dropdown-item" href="#">June - August</a>
                            <a class="dropdown-item" href="#">August - November</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card tale-bg">
            <div class="card-people mt-auto">
                <img src="../../images/dashboard/Imagen2.jpg" alt="people">
                <div class="weather-info">
                    <div class="d-flex">
                        <div>
                            <h2 class="mb-0 font-weight-normal"><i class="icon-sun me-2"></i>@DateTime.Now.ToShortTimeString()</h2>
                        </div>
                        <div class="ms-2">
                            <h4 class="location font-weight-normal">Tijuana</h4>
                            <h6 class="font-weight-normal">Baja California</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 grid-margin transparent">
        <div class="row">
            @* <div>*@
            @{
                if (Model.cheking == null)
                {
                    <a class="col-md-6 mb-4 stretch-card transparent" href="@Url.Action("/Opcion/1")">
                        <div class="card card-tale">
                            <div class="card-body center-block">
                                <p class="mb-4">Hacer Cheking</p>
                                <p class="fs-30 mb-2"><i class="fa fa-check"></i></p>

                            </div>
                        </div>
                    </a>
                }
                else
                {
                    <div class="col-md-6 mb-4 stretch-card transparent">
                        <div class="card card-dark-blue">
                            <div class="card-body">
                                <p class="mb-4">Cheking Realizado </p>
                               

                            </div>
                        </div>
                    </div>
                }
            }
           
            @*   </div>*@
            <div class="col-md-6 mb-4 stretch-card transparent">
                <div class="card card-dark-blue">
                    <div class="card-body">
                        <p class="mb-4">Autos Activos</p>
                        <p class="fs-30 mb-2">@AutosActivos</p>

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-4 stretch-card transparent">
                <div class="card card-tale">
                    <div class="card-body">
                        <p class="mb-4">Usuarios Activos</p>
                        <p class="fs-30 mb-2">@EmpleadosActivos</p>

                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4 stretch-card transparent">
                <div class="card card-dark-blue">
                    <div class="card-body">
                        <p class="mb-4">Autos Activos</p>
                        <p class="fs-30 mb-2">@AutosActivos</p>

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-4 mb-lg-0 stretch-card transparent">
                <div class="card card-light-blue">
                    <div class="card-body">
                        <p class="mb-4">Chekings Totales en el Dia</p>
                        <p class="fs-30 mb-2">59</p>

                    </div>
                </div>
            </div>
            <div class="col-md-6 stretch-card transparent">
                <div class="card card-light-danger">
                    <div class="card-body">
                        <p class="mb-4">Autos en el Taller</p>
                        <p class="fs-30 mb-2">@AutosTaller</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
